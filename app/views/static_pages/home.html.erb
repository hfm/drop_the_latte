<div class="center">

  <% if signed_in? %>
    <%= link_to "Profile", current_user %>
    <%= link_to "Settings", '#' %>
    <%= link_to "Signout", signout_path, method: "delete" %>
  <% else %>
    <p class="caption">登録済みの方はこちら</p>
    <div class="button">
      <%= link_to "ログイン", signin_path %>
    </div>
    <p class="caption">登録がお済みでない方はこちら</p>
  <div class="button">
    <%= link_to "登録", signup_path %>
  </div>
  <% end %>
</div>
