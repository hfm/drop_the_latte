<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("layouts/logo.png", :size => "100x26", :id => "logo", :alt => "logo") , user_path(current_user) %>
      <% if signed_in? %>
        <%= link_to "プロフィール", current_user %>
        <%= link_to "設定", edit_user_path(current_user) %>
        <%= link_to "サインアウト", signout_path, method: "delete" %>
      <% else %>
        <%= link_to "ログイン", signin_path %>
      <% end %>
    </div>
  </div>
</header>
