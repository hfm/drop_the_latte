<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <%= form_tag sessions_path do |f| %>
    <p class="form">
      <h3><%= label_tag :email %></h3>
      <%= text_field_tag :email %>
    </p>

    <p class="form">
      <h3><%= label_tag :password %></h3>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "ログイン", class: "btn btn-large btn-primary" %>
  <% end %>

    <p class="caption">New user? <%= link_to "サインアップ", signup_path %></p>
</div>
