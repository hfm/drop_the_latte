<% provide(:title, "ダッシュボード") %>

<% if @photos.any? %>
  <% @photos.each do |photo| %>
    <%= content_tag(:div, photo.took_date) %>
    <%= link_to image_tag("layouts/sugoi.jpg", :size => "200x200", :id => "", :alt => "") , "#" %>

    <%= form_for(Comment.new) do |f| %>
      <%= hidden_field 'photo_id', photo.id %>
      <%= f.text_field("content", "", :class => "text_content") %>
      <%= f.image_submit("layouts/comment_btn.png", :size => "32x32", :class => "comment_btn btn btn-#{photo.id}") %>
    <% end %>

    <% if @comments.any? %>
      <ul class="users_comments">
        <%= render @comments %>
      </ul>
    <% end %>
  <% end %>
<% end %>
