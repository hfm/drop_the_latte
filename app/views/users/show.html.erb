<%= content_tag(:div, :class => "dashboard_wrapper") do -%>
  <% provide(:title, "ダッシュボード") %>
  <% if @photos.any? %>
    <%= content_tag(:div, :class => "photoSet") do -%>
      <% @photos.each do |photo| %>
        <%= content_tag(:div, photo.took_date, :class => "date") %>
        <%= link_to image_tag("layouts/sugoi.jpg", :id => "", :alt => "") %>
        <h3>
          <%= form_for(Comment.new) do |f| %>
            <%= hidden_field_tag 'photo_id', photo.id %>
            <%= f.text_field("content", :class => "text_content") %>
            <%= f.submit("", :size => "32x32", :class => "comment btn btn-#{photo.id}") %>
          <% end %>
        </h3>
        <% if @comments.any? %>
          <ul class="users_comments">
            <%= render @comments %>
          </ul>
        <% end %>
      <% end %>
    <% end -%>
  <% end %>
<% end -%>
